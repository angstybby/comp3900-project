generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  zid       String   @id
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile?
}

model Profile {
  zid          String @id
  profileOwner User   @relation(fields: [zid], references: [zid])

  fullname    String
  description String?
  resume      String?
}
